<resources>

    <style name="Widget.Theme.JMABMobile.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.JMABMobile.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item> <!-- Increase font size for active -->
        <item name="android:textColor">@color/white</item> <!-- Ensure active text is white -->
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item> <!-- Smaller font size for inactive -->
        <item name="android:textColor">@color/white</item> <!-- Inactive text color -->
    </style>

    <!-- Active Icon Size -->
    <style name="BottomNavIconActive">
        <item name="android:layout_width">36dp</item>  <!-- Larger icon size -->
        <item name="android:layout_height">36dp</item> <!-- Larger icon size -->
    </style>

    <!-- Inactive Icon Size -->
    <style name="BottomNavIconInactive">
        <item name="android:layout_width">24dp</item>  <!-- Smaller icon size -->
        <item name="android:layout_height">24dp</item> <!-- Smaller icon size -->
        <item name="android:alpha">0.5</item> <!-- Lower opacity for inactive items -->
    </style>

    <style name="NoUnderlineSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@null</item>
    </style>


</resources>