<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>  <!-- Rounded Corners -->
            <gradient
                android:angle="90"
                android:startColor="#295789"
                android:endColor="#97B9DD"/> <!-- Gradient Colors -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="3dp"
                android:bottom="3dp"/>
        </shape>
    </item>
</layer-list>
