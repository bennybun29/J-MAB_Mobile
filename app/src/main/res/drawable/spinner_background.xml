<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- Background Color -->
            <stroke android:width="2dp" android:color="@color/j_mab_blue"/>  <!-- Border -->
            <corners android:radius="8dp"/>  <!-- Corner Radius -->
        </shape>
    </item>

    <!-- Dropdown Icon on the right -->
    <item android:end="8dp" android:top="8dp" android:bottom="8dp" android:right="8dp">
        <bitmap
            android:gravity="end|center_vertical"
            android:src="@drawable/dropdown" />
    </item>

</layer-list>
