<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active state -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/j_mab_blue" /><!-- Active button color -->
            <stroke android:width="2dp" android:color="@color/j_mab_blue" /> <!-- Border color matches background -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E7E7E7" /> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="#295789" /> <!-- Blue border -->
        </shape>
    </item>
</selector>
