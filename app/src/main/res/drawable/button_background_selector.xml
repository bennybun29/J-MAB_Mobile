<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#295789" /><!-- Active button color -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#295789" /> <!-- Border color matches background -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#295789" /> <!-- Blue border -->
        </shape>
    </item>
</selector>
