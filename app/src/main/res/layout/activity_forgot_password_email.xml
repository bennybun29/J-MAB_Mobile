<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ForgotPasswordEmailActivity">

    <!-- Back Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="15dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@android:color/white">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_btn_product_screen"
            android:background="@null"
            android:scaleType="centerInside"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="198dp"
        android:src="@drawable/jmab_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="FORGOT PASSWORD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans"
        android:text="Enter your email to reset password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textSize="13sp"/>


    <TextView
        android:id="@+id/emailErrorText"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/dmsans"
        android:textColor="#D32F2F"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toStartOf="@id/emailAddress"
        app:layout_constraintBottom_toTopOf="@id/emailAddress"
        android:layout_marginStart="12dp"/>


    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_textfield"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/cabin"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/tvCreateAccount"
        android:layout_marginTop="64dp"/>

    <Button
        android:id="@+id/send_email_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#02254B"
        android:text="Send"
        android:textSize="15sp"
        android:fontFamily="@font/dmsans_bold"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/send_email_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:lottie_rawRes="@raw/multiple_circle_loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <View
        android:id="@+id/overlayBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="12dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>