<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/top_background_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_btn"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans"
        android:text="CHECKOUT"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/j_mab_blue"
            android:text="PROVINCE"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/location_on"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#C8C8C8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fullNameTvCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Full Name"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/dmsans"
                    android:textStyle="italic"
                    android:layout_marginLeft="50dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/phoneNumberTVCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(09##) ### ####"
                    android:fontFamily="@font/dmsans"
                    app:layout_constraintTop_toBottomOf="@id/fullNameTvCheckout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="italic"
                    android:layout_marginLeft="50dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/fullAddressTVCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Address"
                    android:fontFamily="@font/dmsans"
                    app:layout_constraintTop_toBottomOf="@id/phoneNumberTVCheckout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="italic"
                    android:layout_marginLeft="50dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/idNumberTVCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Number"
                    android:fontFamily="@font/dmsans"
                    app:layout_constraintTop_toBottomOf="@id/fullAddressTVCheckout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="italic"
                    android:layout_marginLeft="50dp"
                    android:textSize="15sp"
                    android:paddingBottom="5dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@null"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/j_mab_blue"
            android:text="ITEMS"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:drawablePadding="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#C8C8C8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_image_checkout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/jmab_fab"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans"
                    android:id="@+id/item_name_checkout"
                    android:text="Item Name Goes Here"
                    app:layout_constraintLeft_toRightOf="@id/item_image_checkout"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/j_mab_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans"
                    android:id="@+id/quantityTVCheckout"
                    android:text="Quantity: ##"
                    app:layout_constraintLeft_toRightOf="@id/item_image_checkout"
                    app:layout_constraintTop_toBottomOf="@id/item_name_checkout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/j_mab_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans"
                    android:id="@+id/priceTV"
                    android:text="PHP: ##"
                    app:layout_constraintLeft_toRightOf="@id/item_image_checkout"
                    app:layout_constraintTop_toBottomOf="@id/quantityTVCheckout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/j_mab_blue"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/horizontal_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/totalPaymentTV"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:text="Total: "/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:text="PLACE ORDER"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>